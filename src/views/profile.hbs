<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    {{#if data.IDPaciente}}
                    <h3>Bienvenido paciente: {{data.nombre}} {{data.apellidoPaterno}}</h3>
             <a href="/concierge" class="btn btn-primary m-4">
                        Concierge
                    </a>
                    <a href="/molecularTest" class="btn btn-primary m-4">
                        Molecular Test
                    </a>
                    <a href="/controlCare" class="btn btn-primary m-4">
                        Control Care
                    </a>
                    <a href="/recordatorios" class="btn btn-primary m-4">
                        Recordatorios
                    </a>

                    {{else}}
                    {{#if data.IDCirculo}}
                    <h3>Bienvenido {{data.nombre}} {{data.apellidoPaterno}}</h3>




                    <a href="/concierge" class="btn btn-primary m-4">
                        Concierge
                    </a>
                    <a href="/molecularTest" class="btn btn-primary m-4">
                        Molecular Test
                    </a>
                    <a href="/controlCare" class="btn btn-primary m-4">
                        Control Care
                    </a>
                    <a href="/recordatorios" class="btn btn-primary m-4">
                        Recordatorios
                    </a>
                    {{else}}
                    {{#if data.IDDoctor}}
                    <h3>Bienvenido DR(A). {{data.nombre}} {{data.apellidoPaterno}}</h3>
                    <a href="/recordatoriosDR" class="btn btn-primary m-4">
                        Recordatorios
                    </a>
                    <a href="/pacientes" class="btn btn-primary m-4">
                        Pacientes.
                    </a>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>
            </div>
        </div>

    </div>
</div>