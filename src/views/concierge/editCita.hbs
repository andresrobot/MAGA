<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/concierge/editCita/{{cita.IDCita}}" method="POST">
                <div class="form-group">
                    <input type="date" name="fecha" class="form-control" placeholder="Fecha" value={{cita.fecha}}
                        autofocus>
                </div>
                <div class="form-group">
                    <input type="time" id="inputMDEx1" class="form-control" name="hora" value={{cita.hora}}>
                    <label for="inputMDEx1">Determine una nueva hora.</label>
                </div>
                <select class="form-group" id="inputGroupSelect01" name="IDDoctor">
                    <option selected>Choose...</option>
                    {{#each doctores}}
                    <option value={{IDDoctor}}>DR. {{apellidoPaterno}} - {{IDDoctor}}</option>
                    {{/each}}
                </select>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>