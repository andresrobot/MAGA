<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/concierge/nuevaCita" method="POST">
                        <div class="form-group">
                            <input type="date" name="fecha" class="form-control" placeholder="Fecha">
                        </div>
                        <div class="form-group">
                            <input type="time" id="inputMDEx1" class="form-control" name="hora">
                            <label for="inputMDEx1">Elija la hora</label>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Options</label>
                            </div>
                            <select class="custom-select" id="inputGroupSelect01" name="IDDoctor">
                                <option selected>Choose...</option>
                                {{#each doctores}}
                                <option value={{IDDoctor}} >DR. {{apellidoPaterno}} - {{especialidad}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Agendar cita
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>