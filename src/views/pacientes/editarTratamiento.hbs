<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            {{#each tratamiento}}
            <form action="/pacientes/editarTratamiento/{{IDTratamiento}}" method="POST">
               <div class="form-group">
            
              <input type="type" name="indicaciones" placeholder="Indicaciones" class="form-control" value={{indicaciones}} autofocus>
            </div>
            {{/each}}
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>